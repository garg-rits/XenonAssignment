<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     {{!-- {{>header}} --}}
    <title>Document</title>
     <link  href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.rtl.min.css" integrity="sha384-7mQhpDl5nRA5nY9lr8F1st2NbIly/8WqhjTp+0oFxEA/QUuvlbF6M1KXezGBh3Nb" crossorigin="anonymous">
</head> 
<body>
    {{>navbar}}
    
     <div class="hero" style=" height: 600px;
    width: 100%;background: linear-gradient(to right,#ff105f,#ffad06);transition: .3s;
     background-position: center; background-size:cover; position: absolute">
  
        <div class="form-box" style="  width: 380px;
    position: relative;
    height: 480px;
    margin: 6% auto; 
    background: #fff;
    padding: 5px; overflow:hidden;">
            <div class="button-box" style="width:220px;
margin:45px;
margin-left:70px;
position:relative;
box-shadow: 0 0 5px 8px #6b22051f;
border-radius:30px;">
            <div id="btn" style="top:0;
    left:0;
    position: absolute;
    width: 110px;
    background: linear-gradient(to right,#ff105f,#ffad06);
    height: 100%;
    border-radius:30px;
     transition: .5s;"
    >
    </div>
                <button type="button" class="toggle-btn" style="padding: 10px 24px;
    cursor:pointer;
    background: transparent;
    border:0;
    outline:none;" onclick="login()">Log In</button>   
                <button type="button" class="toggle-btn" style="padding: 10px 24px;
    cursor:pointer;
    background: transparent;
    border:0;
    outline:none;" onclick="register()">Register</button>   
            </div>
        <form type="submit" action="/index"  id="login" class="input-group" style="top:150px;position:absolute; width: 280px; transition: .5s ; margin-left:42px;">
            <input name="uid" type="text" class="input-field" placeholder="User Id" required style="width:100%; padding:10px 0; margin:5px 0;border-left:0;
            border-top:0; border-right:0; border-bottom:1px solid #999; outline:none;background:transparent;">
            <input name="passw" type="text" class="input-field" placeholder="Enter password" required style="width:100%; padding:10px 0; margin:5px 0;border-left:0; border-right:0; border-bottom:1px solid #999;border-top:0; outline:none;background:transparent;">
            <input name="remp" type="checkbox" class="check-box" style="margin: -53px -19px 32px 8px;">
            <span style="color:#777; font-size:12px; bottom: 106px; margin-left:30px; position: absolute;">Remember Password</span>
            <button type="submit" class="submit-btn" style="width:99%; padding:10px 30px; cursor: pointer; display:block; margin:auto  ; background:linear-gradient(to right,#ff105f,#ffad06
            );border:0;outline:none; border-radius:30px;margin-top:98px">Log In</button>
        </form>
        <form type="submit" action="/index"  id="register" class="input-group" style="top:150px;position:absolute; width: 280px; transition: .5s ; margin-left:8px;
        left:450px">
            <input name="userid" type="text" class="input-field" placeholder="User Id" required style="width:100%; padding:10px 0; margin:5px 0;border-left:0;
            border-top:0; border-right:0; border-bottom:1px solid #999; outline:none;background:transparent;">
            <input name="remail" type="email" class="input-field" placeholder="Email Id" required style="width:100%; padding:10px 0; margin:5px 0;border-left:0;
            border-top:0; border-right:0; border-bottom:1px solid #999; outline:none;background:transparent;">
            <input name="epass" type="text" class="input-field" placeholder="Enter password" required style="width:100%; padding:10px 0; margin:5px 0;border-left:0; border-right:0; border-bottom:1px solid #999;border-top:0; outline:none;background:transparent;">
            <input name="check" type="checkbox" class="check-box" style="margin: -53px -19px 32px 8px;">
            <span style="color:#777; font-size:12px; bottom: 106px; margin-left:30px; position: absolute;">I agree to the terms and conditions</span>
            <button type="submit" class="submit-btn" style="width:99%; padding:10px 30px; cursor: pointer; display:block; margin:auto  ; background:linear-gradient(to right,#ff105f,#ffad06
            );border:0;outline:none; border-radius:30px;margin-top:98px">Register</button>
        </form>
        </div>
     </div>

    <script>
 var  x=document.getElementById("login");
 var  y=document.getElementById("register");
 var  z=document.getElementById("btn");

 function register(){
    x.style.left="-400px";
    y.style.left="50px";
    z.style.left="110px";
    
 }
 function login(){
    x.style.left="20px";
    y.style.left="450px";
    z.style.left="0px";
    
 }


    </script>


     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>